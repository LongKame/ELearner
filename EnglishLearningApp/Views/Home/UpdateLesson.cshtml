<div class="form-outline" style="width: 40%;margin-left:20%">
    <form action="/Home/DoUpdateLesson" method="post">
        <input type="hidden" name="lesson.Id" class="form-control" value="@Model.Id">
        <div class="form-group">
            <label>Lesson name:</label>
            <input type="text" name="lesson.Lesson1" class="form-control" placeholder="Enter name" value="@Model.Lesson1">
        </div>
        <div class="form-group">
            <label>Part:</label>
            <select class="form-select" name="lesson.PartId">
                <option selected>Open this select part</option>
                @foreach (var i in ViewBag.Part)
                {
                    <option value="@i.Id">@i.PartName</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label>Level:</label>
            <select class="form-select" name="lesson.LevelId">
                <option selected>Open this select level</option>
                @foreach (var i in ViewBag.Level)
                {
                    <option value="@i.Id">@i.Level1</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label>Image:</label>
            <img src="@Model.Image" style="height:150px;width:120px" />
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

