<style>
    .form-outline {
        margin-top: 3%;
        position: relative;
        text-align: center;
        border-style: solid;
        border-width: 1px;
        border-color: gray;
        display: inline-block;
    }
</style>
<div class="form-outline" style="width: 40%;margin-left:20%">
    <form action="/Home/DoAddLesson" method="post">
        <div class="form-group">
            <label>Lesson:</label>
            <input type="text" name="lesson.Lesson1" class="form-control" placeholder="Enter lesson" value="">
        </div>
        <div class="form-group">
            <label>Part:</label>
            <select class="form-select" name="lesson.PartId">
                @foreach (var i in ViewBag.Part)
                {
                    <option value="@i.Id">@i.PartName</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label>Level:</label>
            <select class="form-select" name="lesson.LevelId">
                @foreach (var i in ViewBag.Level)
                {
                    <option value="@i.Id">@i.Level1</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label>Image:</label>
            <input type="file" name="lesson.Image" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
