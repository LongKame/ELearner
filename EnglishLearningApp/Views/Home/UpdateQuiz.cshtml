<style>
    .form-outline {
        margin-top: 3%;
        position: relative;
        text-align: center;
        border-style: solid;
        border-width: 1px;
        border-color: gray;
        display: inline-block;
    }
</style>
<div class="form-outline" style="width: 40%;margin-left:20%">
    <form action="/Home/DoUpdateQuiz" method="post">
        <input type="hidden" name="questionId" class="form-control" value="@Model.Id">
        <div class="form-group">
            <label>Question:</label>
            <input disabled type="text" name="question1" class="form-control" placeholder="Enter question" value="@Model.Question1">
        </div>
        <div class="form-group">
            <label>Lesson:</label>
            <select disabled class="form-select" name="lessonId">
                @foreach (var i in ViewBag.Lesson)
                {
                    <option selected="@(i.Id == ViewBag.LessonId ? "selected" : null)" value="@i.Id">@i.Lesson1</option>
                }
            </select>
        </div>
        <div class="form-group">
            @foreach (var i in Model.Answers)
            {
                <h5 style="margin-left: -100%" class="nr td-actions text-center"></h5>
                <input disabled type="radio" name="question_@i.Id" @(i.Correct ? "checked=\"checked\"" : "") />
                <input disabled class="form-control" type="text" name="answer1" value="@i.Answer1" />
                <br />
            }
        </div>
    </form>
</div>

<script type="text/javascript">
    var a = document.getElementsByClassName("nr");
    for (var i = 0; i < a.length; i++) {
        if (i == 0) {
            a[i].innerHTML = "Answer A: ";
        }
        if (i == 1) {
            a[i].innerHTML = "Answer B: ";
        }
        if (i == 2) {
            a[i].innerHTML = "Answer C: ";
        }
        if (i == 3) {
            a[i].innerHTML = "Answer D: ";
        }

    }
</script>